{
  "manifest_version": 3,
  "name": "Youtube No Disturbance",
  "description": "An extension to automatically skip skippable ads, mute ads, and press continue watching",
  "version": "1.0",
  "host_permissions": ["https://www.youtube.com/*"],
  "permissions": [
    "storage",
    "scripting"
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": "youtube_icon.png"
    },
    "content_scripts": [
      {
        "js": ["content_script.js"],
        "matches": ["https://www.youtube.com/*"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "48": "youtube_icon.png"
    }
}